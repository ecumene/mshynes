---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<style is:global>
  html {
    font-size: 20px;
    color: #ebe9ff;
  }
  * {
    text-shadow: 0.05rem 0.05rem 1px #aa0000, -0.05rem 0.05rem 1px #00aa00,
      -0.05rem -0.05rem 1px #0000aa;
  }
  p, h1, h2, h3, h4, h5, h6, li  {
    transform: rotate(-0.5deg);
  }
</style>

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />
<link rel="icon" type="image/svg+xml" href="/~mshynes/favicon.svg" />
<meta name="generator" content={Astro.generator} />
<title>{title}</title>

<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Libre+Bodoni:wght@400;700&display=swap"
  rel="stylesheet"
/>

<body class="bg-black font-serif">
  <slot />
</body>
